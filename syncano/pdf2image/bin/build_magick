#!/usr/bin/env bash
set -e

SCRIPT_PATH="$( cd "$(dirname "$0")" ; pwd -P )"
BUILD_PATH="${SCRIPT_PATH}/../.tmp-build"
DIST_PATH="${SCRIPT_PATH}/../bin"

mkdir -p ${DIST_PATH}
mkdir -p ${BUILD_PATH}

cd ${BUILD_PATH}
mkdir -p gm

if [ ! -f "${DIST_PATH}/gm" ]
then
  curl -L -O https://downloads.sourceforge.net/graphicsmagick/graphicsmagick/1.3.28/GraphicsMagick-1.3.28.tar.gz
  tar -zxvf GraphicsMagick-1.3.28.tar.gz && cd GraphicsMagick-1.3.28

  ./configure --enable-shared=no --enable-static=yes --with-webp=no --prefix=${BUILD_PATH}/gm
  make install

  cp ${BUILD_PATH}/gm/bin/gm ${DIST_PATH}
else
  echo "No need to build graphicsmagick"
fi


cd ${BUILD_PATH}
mkdir -p im

if [ ! -f "${DIST_PATH}/magick" ]
then
  curl -L -O https://github.com/ImageMagick/ImageMagick/archive/7.0.7-35.tar.gz
  tar -zxvf 7.0.7-35.tar.gz && cd ImageMagick-7.0.7-35

  ./configure --enable-shared=no --enable-static=yes --with-webp=no --prefix=${BUILD_PATH}/im
  make install

  cp ${BUILD_PATH}/im/bin/magick ${DIST_PATH}
else
  echo "No need to build imagemagic"
fi

cd ${BUILD_PATH}
mkdir -p gs

if [ ! -f "${DIST_PATH}/gs" ]
then
  curl -L -O https://github.com/ArtifexSoftware/ghostpdl-downloads/releases/download/gs926/ghostscript-9.26.tar.gz
  tar -zxvf ghostscript-9.26.tar.gz && cd ghostscript-9.26

  ./configure --with-libiconv=no --with-local-cups=yes --without-libpaper --prefix=${BUILD_PATH}/gs
  make install

  cp ${BUILD_PATH}/gs/bin/gs ${DIST_PATH}
else
  echo "No need to build ghostscript"
fi

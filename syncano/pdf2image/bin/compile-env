#!/usr/bin/env sh

mkdir -p .dist
cp package.json .dist
cd .dist
npm install --production
mkdir -p node_modules/.bin/
cp ../bin/gm node_modules/.bin/
cp ../bin/gs node_modules/.bin/
cp ../bin/magick node_modules/.bin/
chmod +x node_modules/.bin/gm
chmod +x node_modules/.bin/gs
chmod +x node_modules/.bin/magick
mkdir -p node_modules/.bin/config
cp ../bin/config/*.* node_modules/.bin/config/
chmod +x node_modules/.bin/config
